<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_see_offers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swyftlabs.swyftbooks.Activities.SeeOffersActivity"
    android:background="@mipmap/androidbackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/detailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/priceResults"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="#44ffffff"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:id="@+id/image"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:elevation="2dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:id="@+id/title"
                    android:textColor="@color/white"
                    android:maxLines="2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:id="@+id/author"
                    android:textColor="@color/white"
                    android:maxLines="1"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:id="@+id/isbn"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:id="@+id/edition"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:id="@+id/publisher"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:id="@+id/binding"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:id="@+id/listPrice"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="1"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/priceResults"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
